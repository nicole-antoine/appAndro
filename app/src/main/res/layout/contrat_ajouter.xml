<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10"
	    android:background="@color/background_bleuclair" >
    	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    
	    	<TextView
	    	    android:id="@+id/txtview_idsociete"
	    	    android:layout_width="fill_parent"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="20dp"
	    	    android:text="@string/id_societe"
	    	    android:textColor="@color/background_blanc"
	    	    android:textSize="20sp" />

			<EditText
			    android:id="@+id/edittxt_societe"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="number" />

			<TextView
			    android:id="@+id/txtview_tickgrat"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/ticket_gratuit"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />

			<EditText
			    android:id="@+id/edittxt_ticket_gratuit"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="number" />
	
			<TextView
			    android:id="@+id/txtview_nbtickets"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/nb_tickets"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />

			<EditText
			    android:id="@+id/edittxt_nbtickets"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="number" />
	
			<TextView
			    android:id="@+id/txtview_date_deb"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/date_deb"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />
	
			<EditText
			    android:id="@+id/edittxt_date_deb"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="text" />
	
			<TextView
			    android:id="@+id/txtview_ptttc"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/ptttc"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />
	
			<EditText
			    android:id="@+id/edittxt_ptttc"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="numberDecimal" />
	
			<TextView
			    android:id="@+id/txtview_pttva"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/pttva"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />
	
			<EditText
			    android:id="@+id/edittxt_pttva"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="numberDecimal" />
	
			<TextView
			    android:id="@+id/txtview_ptht"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/ptht"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />
	
			<EditText
			    android:id="@+id/edittxt_ptht"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="numberDecimal" />
	
			<TextView
			    android:id="@+id/txtview_depot"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:text="@string/depot"
			    android:textColor="@color/background_blanc"
			    android:textSize="20sp" />
	
			<EditText
			    android:id="@+id/edittxt_depot"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="20dp"
			    android:inputType="numberDecimal" />
	
			<Button
			    android:id="@+id/submitButtonContrat"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/background_blanc"
			    android:text="@string/save"
			    android:textSize="20sp" />

			<Button
			    android:id="@+id/listerButtonContrat"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/background_blanc"
			    android:paddingTop="5dp"
			    android:text="@string/list_all_contrats"
			    android:textSize="20sp" />

			</LinearLayout>
		</ScrollView>
</LinearLayout>