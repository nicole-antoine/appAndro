<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@color/background_bleuclair">

    <TextView
        android:id="@+id/txtview_titre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:text="@string/ticket"
        android:textColor="@color/background_blanc"
        android:textSize="22sp"
        android:textStyle="bold" >

    </TextView>
    <TextView
        android:id="@+id/txtview_intervdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:text="@string/tickt_date"
        android:textColor="@color/background_blanc"
        android:textSize="16sp"
        android:textStyle="bold" >

    </TextView>
    <TextView
        android:id="@+id/txtview_demandeur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:text="@string/tickt_demandeur"
        android:textColor="@color/background_blanc"
        android:textSize="16sp"
        android:textStyle="bold" >

    </TextView>
    <TextView
        android:id="@+id/txtview_nummateriel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:text="@string/tickt_intervention_realisee"
        android:textColor="@color/background_blanc"
        android:textSize="16sp" >

    </TextView>

    <TextView
        android:id="@+id/txtview_explication"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="145dp"
        android:text="@string/tickt_intervention_datepicker"
        android:textColor="@color/background_blanc"
        android:textSize="16sp" >
    </TextView>

    <TextView
        android:id="@+id/txtview_duree"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="220dp"
        android:text="@string/tickt_duree"
        android:textColor="@color/background_blanc"
        android:textSize="16sp" >

    </TextView>

    <EditText
        android:id="@+id/edittxt_duree"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="220dp"
        android:inputType="text"
        android:textColor="@color/background_blanc"
        android:textSize="16sp" >

    </EditText>
    
    <TextView
        android:id="@+id/txtview_conseil"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="260dp"
        android:text="@string/conseil"
        android:textColor="@color/background_blanc"
        android:textSize="16sp" >

    </TextView>
    
     <EditText
        android:id="@+id/edittxt_conseil"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="280dp"
        android:inputType="text"
        android:textColor="@color/background_blanc"
        android:textSize="16sp" >

    </EditText>

    <DatePicker
        android:id="@+id/datePicker1"
        style="@style/AppTheme"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <Spinner
        android:id="@+id/spinner1"
        style="@style/AppTheme"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/txtview_intervdate"
        android:layout_below="@+id/edittxt_duree"
        android:layout_marginTop="20dp"
        android:background="@color/background_blanc"
        android:entries="@array/intervention_liste"
        android:prompt="@string/intervention_choix"
        android:textColor="@color/background_blanc" />
    
    <Button
        android:id="@+id/btnValiderTicket"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="380dp"
        android:background="@color/background_blanc"
        android:text="@string/save"
        android:textColor="@color/background_bleu"
        android:textSize="16sp" >

    </Button>

</RelativeLayout>
